#include <iostream>
#include <vector>

using namespace std;

int interpolatioSearch(vector<int>& nums, int target) {
	int left = 0;
	int right = nums.size() - 1;

	while (left <= right && target >= nums[left] && target <= nums[right]) {
		int pos = left + ((target - nums[left] * (right - left) / (nums[right] - nums[left])));

		if (nums[pos] == target) {
			return pos;
		}
		else if (nums[pos] < target) {
			left = pos + 1;
		}
		else {
			right = pos - 1;
		}
	}


	return -1
}

int main() {
	vector <int> nums = { 1,2,3,4,5,6,7,8 };
	int target = 6;
	int index = interpolationSearch(nums, target);

	if (index != -1) {
		cout << "\nAlvo encontrado no indice de nro: " << index << endl;
	}
	else {
		cout << "\nAlvo nÃ£o encontrado! " << endl;
	}

	return 0;
}
